<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:author_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question %></td>
        <td><%= link_to question.author.name, user_path(question.author) %></td>
        <td><%= question.created_at %></td>
        <td>
          <%= link_to t('.answer', :default => t("helpers.links.answer")),
                      new_question_answer_path(question), :class => ' btn-primary btn-xs' %>
          <% if question.author == current_user %>            
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_question_path(question), :class => ' btn-default btn-xs' %>            
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        question_path(question),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => ' btn-xs btn-danger' %>
          <% end %>              
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Ask_a_New_Question!")),
            new_question_path,
            :class => 'btn btn-primary' %>
