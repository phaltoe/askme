<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

  <dd><%= @question.author.email %></dd>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @question.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author_id) %>:</strong></dt>
  <dd><%= link_to @question.author.name, user_path(@question.author) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>              
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to t('.Answer this Question', :default => t("helpers.links.Answer this Question!")),
              new_question_answer_path(@question), :class => 'btn btn-primary'  %>

</br>
</br>
<dl class="dl-horizontal">
  <% @question.answers.each do |answer| %>
    <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
    <dd><%= answer.content %></dd>
    <dt><strong><%= model_class.human_attribute_name(:written_by) %>:</strong></dt>
    <dd><%= answer.answerer %></dd>
  <% end %>  
</dl>              