<%- model_class = User -%>
<div class="page-header">
  <h1><%= @user.name %></h1>
</div>

<dl class="dl-horizontal">
  <dd><strong><%= model_class.human_attribute_name(:Authored_Questions) %>:</strong></dd>
  </br>
  <% @user.authored_questions.each do |question| %>
    <dd><%= link_to question.title, question %></dd>
  <% end %>
  </br>
  <dd><strong><%= model_class.human_attribute_name(:Answers) %>:</strong></dd>
  </br>
  <% @user.answers.each do |answer| %>
    <dd><%= link_to answer.question.title, question_path(answer) %></dd>
  <% end %>  
  <dd><%= @user.reset_password_sent_at %></dd>
</dl>

