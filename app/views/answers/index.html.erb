<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <h3><small><%= link_to @answers.first.question.title, question_path(@answers.first.question) %></small></h3>
</div>
<table class="table table-striped">
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= simple_format answer.content %></td>
        <% if answer.answerer %>
          <td><%= link_to answer.answerer.name, user_path(answer.answerer) %></td>
        <% else %>
          <td>Anonymous</td>
        <% end %>
        <td><%= answer.created_at.strftime("%d %b. %Y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.show_answer")),
                        question_answer_path(answer.question, answer), :class => 'btn btn-primary btn-xs' %>  
          <% if policy(answer).edit?  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_question_answer_path(answer.question, answer), :class => 'btn btn-default btn-xs' %>
          <% end %>              
          <% if policy(answer).destroy?  %>            
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        question_answer_path(answer.question, answer),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>              
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => 'btn btn-default' %>
<% if policy(Answer).new? %>
  <%= link_to t('.new', :default => t("helpers.links.new_answer")),
              new_question_answer_path,
              :class => 'btn btn-primary' %>
<% end %>
