<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <h3><small><%= link_to @answers.first.question.title, question_path(@answers.first.question) %></small></h3>
</div>
<table class="table table-striped table-bordered">
  <tbody>
    <% @answers.each do |answer| %>
      <tr><%= render 'index_answers_actions', answer: answer %></tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => 'btn btn-default' %>
<% if policy(Answer).new? %>
  <%= link_to t('.new', :default => t("helpers.links.new_answer")),
              new_question_answer_path,
              :class => 'btn btn-primary' %>
<% end %>
