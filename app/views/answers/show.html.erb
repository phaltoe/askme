<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= link_to @answer.question.title, question_path(@answer.question) %></dd>
</div>

<div class="dl-horizontal">

  <% if @answer.answerer %>
    <%= link_to @answer.answerer.name, user_path(@answer.answerer) %> wrote on <%= @answer.created_at.strftime("%d %b. %Y") %><br />
    <%= simple_format @answer.content %>
  <% else %>  
     Anonymous wrote on <%= @answer.created_at.strftime("%d %b. %Y") %>
    <%= @answer.content %>
  <% end %>
</div>

<%= link_to "Back", :back, :class => 'btn btn-default' %> 
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_answer_path(@answer.question, @answer), :class => 'btn btn-default' %>
<%= link_to t('.index', :default => t("helpers.links.show_all_answers")),
                question_answers_path(@question), :class => 'btn btn-primary' %>              
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_answer_path(@answer.question, @answer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
