<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= link_to @answer.question.title, question_path(@answer.question) %></dd>
</div>

<div class="dl-horizontal">
  <%= render 'show_answer', answer: @answer %>
</div>

<%= render 'show_answer_actions', answer: @answer, question: @question %>